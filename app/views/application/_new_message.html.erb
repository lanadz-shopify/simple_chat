<div class="card new-message">
  <div class="card-header bg-inverse">
    Say something
  </div>
  <%= form_for Message.new, class: "form-inline" do |f| %>
    <div class="card-block">
      <div class="form-group">
        <%= f.text_field :user, placeholder: "User Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :body, placeholder: "Your message...", rows: "5", class: "form-control" %>
      </div>
    </div>

    <div class="card-footer">
      <%= f.submit "Send", class: "btn btn-success", id: "submit_btn" %>
    </div>
  <% end %>
</div>
